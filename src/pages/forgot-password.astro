---
import PublicLayout from "@/layouts/PublicLayout.astro";
import { ForgotPasswordForm } from "@/components/ForgotPasswordForm";

export const prerender = false;
---

<PublicLayout>
  <div class="flex min-h-screen flex-col items-center bg-muted/5 py-12">
    <div class="container max-w-md px-4">
      <div class="mb-12 flex flex-col items-center space-y-6 text-center">
        <h1 class="text-3xl font-bold tracking-tight">Odzyskiwanie hasła</h1>
        <p class="text-lg text-muted-foreground">Wprowadź swój adres email, aby zresetować hasło.</p>
      </div>

      <ForgotPasswordForm client:load />

      <div class="mt-6 text-center">
        <a href="/login" class="text-primary hover:underline text-sm">Powrót do logowania</a>
      </div>
    </div>
  </div>
</PublicLayout>
