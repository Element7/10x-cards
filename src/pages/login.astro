---
import PublicLayout from "@/layouts/PublicLayout.astro";
import { LoginForm } from "@/components/LoginForm";

export const prerender = false;
---

<PublicLayout>
  <div
    class="relative flex min-h-screen flex-col items-center justify-center bg-gradient-to-b from-muted/5 to-muted/10 py-12"
  >
    <div class="absolute inset-0 bg-grid-black/[0.02] bg-[size:20px_20px]"></div>
    <div class="container relative z-10 max-w-md px-4">
      <div class="mb-8 flex flex-col items-center space-y-2 text-center">
        <div class="mb-4 rounded-full bg-primary/10 p-3">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-6 w-6 text-primary"
          >
            <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path>
          </svg>
        </div>
        <h1
          class="bg-gradient-to-br from-foreground to-foreground/70 bg-clip-text text-3xl font-bold tracking-tight text-transparent"
        >
          Logowanie
        </h1>
        <p class="text-lg text-muted-foreground">Zaloguj się do swojego konta, aby zarządzać fiszkami.</p>
      </div>

      <div class="rounded-xl border bg-card/50 backdrop-blur-[2px] shadow-sm">
        <LoginForm client:load />
      </div>

      <div class="mt-6 flex flex-col items-center space-y-2 text-center">
        <p class="text-sm text-muted-foreground">
          Nie masz jeszcze konta?{" "}
          <a href="/register" class="font-medium text-primary hover:underline">Zarejestruj się</a>
        </p>
        <a href="/forgot-password" class="text-sm font-medium text-primary hover:underline"> Zapomniałeś hasła? </a>
      </div>
    </div>
  </div>
</PublicLayout>
