---
import PublicLayout from "@/layouts/PublicLayout.astro";
import { RegisterForm } from "@/components/RegisterForm";

export const prerender = false;
---

<PublicLayout>
  <div class="flex min-h-screen flex-col items-center bg-muted/5 py-12">
    <div class="container max-w-md px-4">
      <div class="mb-12 flex flex-col items-center space-y-6 text-center">
        <h1 class="text-3xl font-bold tracking-tight">Rejestracja</h1>
        <p class="text-lg text-muted-foreground">Utwórz konto, aby rozpocząć naukę z fiszkami.</p>
      </div>

      <RegisterForm client:load />

      <div class="mt-6 text-center">
        <p class="text-sm text-muted-foreground">
          Masz już konto?{" "}
          <a href="/login" class="text-primary hover:underline">Zaloguj się</a>
        </p>
      </div>
    </div>
  </div>
</PublicLayout>
